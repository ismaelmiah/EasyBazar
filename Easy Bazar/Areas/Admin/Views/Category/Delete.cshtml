@model DataSets.Entity.Category
@{
    ViewData["Title"] = "Upsert";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
    var title = "Delete Category";
}

<form method="post" enctype="multipart/form-data">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.ID != 0)
        {
            //edit
            title = "Delete Category";
        }
        <div class="col-12 border-bottom">
            <h2 class="text-primary">@title</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly="readonly" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" readonly="readonly" class=" form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="IsFeatured"></label>
                </div>
                <div class="col-8">
                    <input asp-for="IsFeatured" style="display:block" disabled="disabled" type="checkbox" class="form-control" />
                    <span asp-validation-for="IsFeatured" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.ID != 0)
                    {
                        <partial name="_DeleteAndBackToListButton" model="Model.ID" />
                    }
                    else
                    {
                        <partial name="_CreateAndBackToListButton" />
                    }
                </div>
            </div>
        </div>
        @if (Model.ID != 0)
        {
            <div class="col-3 offset-1 pt-4">
                <img src="@Model.ImageURL" style="border-radius:3px;border:1px solid gray;width:100%;" />
            </div>
        }
        else
        {
            <div class="col-3 offset-1 pt-4">
                <img id="imageupload" src="~/images/noImage.png" style="border-radius:3px;border:1px solid gray;width:100%" />
            </div>
        }
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}