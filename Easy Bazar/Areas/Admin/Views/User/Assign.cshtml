@model DataSets.ViewModels.RoleUserVm 
@{
    ViewData["Title"] = "Assign";
    Layout = "~/Views/Shared/_AdminLTE.cshtml";
}


<h1>Assign Role</h1>

<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border row">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-8">

            <h3>@ViewBag.msg</h3>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
                    @*<input name="name" id="name" value="@ViewBag.name" required="required" class="form-control" />*@
                </div>
                <span asp-validation-for="UserId"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Role"></label>
                </div>
                <div class="col-8">
                    <select asp-for="Role" asp-items="ViewBag.RoleId" class="form-control"></select>
                </div>
                <span asp-validation-for="Role"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Assign</button>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}
